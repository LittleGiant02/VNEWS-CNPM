<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TH 3"
        app:layout_constraintEnd_toEndOf="@id/tvTempMin"
        app:layout_constraintStart_toStartOf="@id/tvTempMax"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivIcDay1"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:src="@drawable/img_cloudy"
        app:layout_constraintEnd_toEndOf="@id/tvTempMin"
        app:layout_constraintStart_toStartOf="@id/tvTempMax"
        app:layout_constraintTop_toBottomOf="@id/tvDay1" />

    <TextView
        android:id="@+id/tvTempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivIcDay1" />
    <TextView
        android:id="@+id/tvTempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:layout_marginStart="@dimen/_2sdp"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/tvTempMax"
        app:layout_constraintTop_toBottomOf="@id/ivIcDay1" />

</androidx.constraintlayout.widget.ConstraintLayout>